{% extends 'base.html.twig' %}

{% block title %}Liste des demandes de devis{% endblock %}

{% block body %}
{% include "Admin/commun/_menu.html.twig" %}
<div class="container py-5">
    <h1 class="mb-4">Demandes de devis</h1>

    <!-- üîç Barre de recherche + filtres -->
    <form method="get" class="row mb-4 g-3">
        <div class="col-md-4">
            <input type="text" name="search" class="form-control" placeholder="Rechercher (nom, email, ville...)" value="{{ search }}">
        </div>
        <div class="col-md-3">
            <input type="date" name="start_date" class="form-control" value="{{ start_date }}">
        </div>
        <div class="col-md-3">
            <input type="date" name="end_date" class="form-control" value="{{ end_date }}">
        </div>
        <div class="col-md-2 text-end">
            <button class="btn btn-primary w-100" type="submit">Filtrer</button>
        </div>
    </form>

    {% if demandes is not empty %}
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Nom</th>
                    <th>Pr√©nom</th>
                    <th>Email</th>
                    <th>T√©l√©phone</th>
                    <th>Ville</th>
                    <th>Date</th>
                    <th>Type d‚Äôintervention</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for d in demandes %}
                    <tr>
                        <td>{{ d.nom }}</td>
                        <td>{{ d.prenom }}</td>
                        <td>{{ d.email }}</td>
                        <td>{{ d.telephone }}</td>
                        <td>{{ d.ville }}</td>
                        <td>{{ d.dateDemande|date('d/m/Y H:i') }}</td>
                        <td>{{ d.typeIntervention }}</td>
                        <td>
                            <a href="{{ path('app_demande_devis_show', {id: d.id}) }}" class="btn btn-sm btn-outline-primary">
                                Voir d√©tail
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div class="alert alert-warning">Aucune demande trouv√©e.</div>
    {% endif %}
</div>
{% endblock %}
