{% for d in devis %}
<tr>
    <td>{{ d.numeroDevis }}</td>
    <td>{{ d.client.nom|capitalize }} {{ d.client.prenom|capitalize }}</td>
    <td>
        {% if d.statut == 'nouveau' %}
            <span class="badge bg-primary">Nouveau</span>
        {% elseif d.statut == 'en_cours' %}
            <span class="badge bg-warning text-dark">En cours</span>
        {% elseif d.statut == 'validé' %}
            <span class="badge bg-success">Validé</span>
        {% else %}
            <span class="badge bg-danger">{{ d.statut }}</span>
        {% endif %}
    </td>
    <td>{{ d.dateCreation|date('d/m/Y') }}</td>
    <td>{{ d.montantTotal }} €</td>
    <td><a href="{{ path('admin_devis_view', {id: d.id})}}" class="btn btn-secondary">Consulter</td>
</tr>
{% else %}
<tr>
    <td colspan="5" class="text-center text-muted">Aucun devis trouvé pour ces statuts.</td>
</tr>
{% endfor %}
